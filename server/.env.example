# Example environment variables for FreshSip server
# Copy this to .env and fill in your actual values

# MongoDB Atlas connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/freshsip

# JWT secret for authentication
JWT_SECRET=your-jwt-secret-here

# Server port
PORT=5000

# Instructions:
# 1. Replace 'username:password' with your MongoDB Atlas credentials
# 2. Replace 'cluster' with your actual cluster name
# 3. Set a secure JWT_SECRET (keep it secret!)
# 4. PORT defaults to 5000 for local development
